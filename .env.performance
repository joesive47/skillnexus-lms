# Performance & Scale Configuration

# CDN Configuration
CDN_ENABLED=true
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN=your-cdn-domain.cloudfront.net
CLOUDFLARE_ENABLED=false
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# Database Performance
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=100
DATABASE_QUERY_TIMEOUT=10000
DATABASE_SLOW_QUERY_THRESHOLD=1000

# Redis Configuration
REDIS_CLUSTER_ENABLED=true
REDIS_CLUSTER_NODES=redis-1:6379,redis-2:6379,redis-3:6379

# Load Balancer
LB_ALGORITHM=round-robin
LB_HEALTH_CHECK_PATH=/api/health
LB_HEALTH_CHECK_INTERVAL=30

# Auto Scaling
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=50
AUTO_SCALING_TARGET_CPU=70
AUTO_SCALING_TARGET_MEMORY=80

# Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=10000
ALERT_WEBHOOK_URL=your-webhook-url

# Performance Thresholds
RESPONSE_TIME_THRESHOLD=1000
ERROR_RATE_THRESHOLD=5
CPU_USAGE_THRESHOLD=80
MEMORY_USAGE_THRESHOLD=85

# App Version
APP_VERSION=8.0.0
