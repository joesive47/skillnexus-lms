# AWS Production Environment Variables

# Database (RDS PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@RDS_ENDPOINT:5432/skillnexus?schema=public"

# NextAuth
NEXTAUTH_SECRET="GENERATE_NEW_SECRET_HERE"
NEXTAUTH_URL="https://skillworldnexus.com"
AUTH_SECRET="GENERATE_NEW_SECRET_HERE"
AUTH_URL="https://skillworldnexus.com"
AUTH_TRUST_HOST="true"
NODE_ENV="production"

# Redis (ElastiCache)
REDIS_URL="redis://ELASTICACHE_ENDPOINT:6379"

# Stripe
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# AWS S3 for video storage
AWS_ACCESS_KEY_ID="YOUR_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="skillnexus-videos"

# YouTube API
YOUTUBE_API_KEY="YOUR_YOUTUBE_API_KEY"

# Email (SES)
SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
SMTP_PORT="587"
SMTP_USER="YOUR_SES_SMTP_USER"
SMTP_PASS="YOUR_SES_SMTP_PASSWORD"

# Sentry
SENTRY_DSN="YOUR_SENTRY_DSN"
