# DATABASE_URL="postgresql://username:password@skillnexus.xxx.us-east-1.rds.amazonaws.com:5432/skillnexus"

# ===================================
# AUTHENTICATION
# ===================================

NEXTAUTH_SECRET="skillnexus-super-secret-key-2024-production-ready"
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="skillnexus-super-secret-key-2024-production-ready"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"
NODE_ENV="development"
NEXT_PUBLIC_URL="http://localhost:3000"

# YouTube API (Optional for video integration)
YOUTUBE_API_KEY=""

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Redis (Optional for caching)
REDIS_URL="redis://localhost:6379"

# AWS (Optional for S3 video storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Email (Optional for notifications)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# RAG System - Production Optimized
RAG_CHUNK_SIZE=600
RAG_CHUNK_OVERLAP=50
RAG_MAX_RESULTS=3
RAG_BATCH_SIZE=10
RAG_MAX_CONCURRENT=5
RAG_CACHE_SIZE=2000
RAG_ENABLE_PRELOAD=true
RAG_FAST_MODE=true
RAG_SIMILARITY_THRESHOLD=0.25

# ===================================
# POSTGRESQL PERFORMANCE SETTINGS
# ===================================

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_TIMEOUT=30000

# Query Optimization
DATABASE_QUERY_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=60000

# ===================================
# SECURITY NOTES
# ===================================
# 1. Never commit this file to Git
# 2. Use environment variables in your hosting platform
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords
# 5. Enable SSL/TLS for all connections
# 6. Use connection pooling for production