import { NextRequest, NextResponse } from 'next/server'
import { BadgeService } from '@/lib/badge-service'

const badgeService = new BadgeService()

export async function GET(
  request: NextRequest,
  { params }: { params: { userId: string } }
) {
  try {
    const userId = params.userId
    const skillBadges = await badgeService.getUserSkillBadges(userId)
    return NextResponse.json(skillBadges)
  } catch (error) {
    console.error('Error fetching skill badges:', error)
    return NextResponse.json({ error: 'Failed to fetch skill badges' }, { status: 500 })
  }
}