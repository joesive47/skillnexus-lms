{
  "database": {
    "connectionPool": {
      "min": 2,
      "max": 100,
      "idleTimeout": 30000,
      "connectionTimeout": 5000
    },
    "queryTimeout": 10000,
    "slowQueryThreshold": 1000
  },
  "cache": {
    "memory": {
      "enabled": true,
      "maxSize": 1000,
      "ttl": 60000
    },
    "redis": {
      "enabled": true,
      "ttl": 3600,
      "maxRetries": 3
    }
  },
  "cdn": {
    "enabled": true,
    "provider": "cloudfront",
    "staticAssetsTTL": 31536000,
    "imageTTL": 86400,
    "videoTTL": 604800
  },
  "loadBalancer": {
    "algorithm": "round-robin",
    "healthCheckInterval": 30,
    "autoScaling": {
      "enabled": true,
      "minInstances": 2,
      "maxInstances": 50,
      "targetCPU": 70,
      "targetMemory": 80
    }
  },
  "monitoring": {
    "metricsInterval": 10000,
    "alertThresholds": {
      "responseTime": 1000,
      "errorRate": 5,
      "cpuUsage": 80,
      "memoryUsage": 85
    }
  }
}
