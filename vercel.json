{
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm install --prefer-offline --no-audit",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=3072",
    "SKIP_ENV_VALIDATION": "true",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "regions": ["sin1"],
  "outputDirectory": ".next",
  "crons": []
}
