# Google Cloud Production Environment

# Database (Cloud SQL)
DATABASE_URL="postgresql://postgres:PASSWORD@/skillnexus?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME"

# NextAuth
NEXTAUTH_URL="https://PROJECT_ID.appspot.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Redis (Cloud Memorystore - Optional)
REDIS_URL="redis://MEMORYSTORE_IP:6379"

# Storage (Cloud Storage)
STORAGE_BUCKET="gs://skillnexus-assets"

# Email (SendGrid)
SENDGRID_API_KEY="your-sendgrid-key"
EMAIL_FROM="noreply@yourdomain.com"

# Stripe
STRIPE_SECRET_KEY="sk_live_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# Google OAuth
GOOGLE_CLIENT_ID="your-client-id"
GOOGLE_CLIENT_SECRET="your-client-secret"

# Azure AD
AZURE_AD_CLIENT_ID="your-client-id"
AZURE_AD_CLIENT_SECRET="your-client-secret"
AZURE_AD_TENANT_ID="your-tenant-id"

# Performance
CDN_ENABLED=true
CLOUDFRONT_DOMAIN="your-cdn-domain"

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# App Config
NODE_ENV=production
PORT=8080
