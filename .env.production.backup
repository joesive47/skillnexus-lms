# Production Environment - SkillNexus LMS
NODE_ENV="production"

# Database - Production PostgreSQL
DATABASE_URL="postgresql://skillnexus_user:CHANGE_THIS_PASSWORD@prod-db:5432/skillnexus_prod"

# NextAuth - Production Secrets
NEXTAUTH_SECRET="GENERATE_STRONG_SECRET_HERE"
NEXTAUTH_URL="https://your-domain.com"
AUTH_SECRET="GENERATE_STRONG_SECRET_HERE"
AUTH_URL="https://your-domain.com"
AUTH_TRUST_HOST="true"

# Redis - Production
REDIS_URL="redis://prod-redis:6379"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"

# Feature Flags (Start with safe defaults)
FEATURE_GAMIFICATION="false"
FEATURE_SOCIAL="false"
FEATURE_CHATBOT="false"
FEATURE_ADVANCED_ANALYTICS="false"

# Security
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Performance
MAX_CONNECTIONS="20"
QUERY_TIMEOUT="30000"